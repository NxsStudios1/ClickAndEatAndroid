<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootBienvenidaCliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1"
    android:padding="16dp"
    tools:context=".cliente.menuc.ClienteHomeFragment">

    <TextView
        android:id="@+id/tvTituloHomeCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Inicio - Cliente"
        android:textColor="#5D4037"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBienvenidaCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#FFE082"
        app:layout_constraintTop_toBottomOf="@id/tvTituloHomeCliente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvSaludoCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¡Bienvenido(a)!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#4E342E"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvNombreCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del cliente"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#BF360C"
                android:paddingBottom="12dp" />

            <ImageView
                android:id="@+id/imgLogoCliente"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginBottom="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/logo_andy_burger"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvFraseCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoy es un gran dÃ­a para disfrutar una Andy Burger ðŸ˜‹ðŸ”"
                android:textSize="16sp"
                android:textColor="#4E342E"
                android:gravity="center"
                android:paddingTop="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#FFCA28" />

            <TextView
                android:id="@+id/tvHintCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explora el menÃº, arma tu pedido y cuÃ©ntanos quÃ© te pareciÃ³."
                android:textSize="13sp"
                android:textColor="#6D4C41"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
