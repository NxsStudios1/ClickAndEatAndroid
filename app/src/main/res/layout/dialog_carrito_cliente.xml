<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        android:backgroundTint="#FFF4E1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTituloCarrito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tu carrito"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCarritoCliente"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:overScrollMode="ifContentScrolls" />

            <TextView
                android:id="@+id/tvTotalCarritoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: $ 0.0"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnCerrarCarrito"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cerrar"
                    android:textColor="@android:color/white"
                    app:backgroundTint="#B0BEC5"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnConfirmarPedidoCliente"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Confirmar pedido"
                    android:textColor="@android:color/white"
                    app:backgroundTint="#FFB74D" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
