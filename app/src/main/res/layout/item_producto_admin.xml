<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/bg_card_ingrediente">

        <TextView
            android:id="@+id/tvNombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre producto"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDescripcionProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del producto"
            android:textColor="#CFD8DC"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvCategoriaProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoría: Sin categoría"
            android:textColor="#FFD180"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvPrecioProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textColor="#FFECB3"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Switch
                android:id="@+id/switchDisponibleProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:textColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/btnConfigIngredientesProducto"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Configurar ingredientes"
                android:padding="4dp"
                android:tint="#FFFFFF"
                android:src="@android:drawable/ic_menu_sort_by_size" />

            <ImageButton
                android:id="@+id/btnEditarProducto"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar producto"
                android:padding="4dp"
                android:tint="#FFFFFF"
                android:src="@android:drawable/ic_menu_edit" />

            <!-- NUEVO: botón eliminar -->
            <ImageButton
                android:id="@+id/btnEliminarProducto"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar producto"
                android:padding="4dp"
                android:tint="#FFFFFF"
                android:src="@android:drawable/ic_menu_delete" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
