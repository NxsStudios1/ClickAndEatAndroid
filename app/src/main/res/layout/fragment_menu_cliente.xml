<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF4F7">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/etBuscarCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Buscar producto o promo..."
            android:imeOptions="actionSearch" />

        <Spinner
            android:id="@+id/spTipoListaCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTituloListaCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Productos disponibles"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="4dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerListaCliente"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="4dp" />

    <LinearLayout
        android:id="@+id/barraCarritoCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="#FFE0B2"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgIconoCarritoCliente"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_shopping_cart_24"/>

        <TextView
            android:id="@+id/tvResumenCarritoCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="0 artículos · Total: $0.0"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnObservacionesCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nota" />

        <Button
            android:id="@+id/btnVerCarritoCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver carrito"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
