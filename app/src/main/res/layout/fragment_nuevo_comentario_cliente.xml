<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTituloNuevoComentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo comentario"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212121"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Asunto -->
        <TextView
            android:id="@+id/tvLabelAsunto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asunto"
            android:textColor="#555555"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvTituloNuevoComentario"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etAsunto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ej. Mala experiencia en general"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="#212121"
            android:textColorHint="#999999"
            app:layout_constraintTop_toBottomOf="@id/tvLabelAsunto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvLabelCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoría"
            android:textColor="#555555"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etAsunto"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spCategoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvLabelCategoria"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvLabelCalificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calificación"
            android:textColor="#555555"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/spCategoria"
            app:layout_constraintStart_toStartOf="parent" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="5"
            app:layout_constraintTop_toBottomOf="@id/tvLabelCalificacion"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvLabelContenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comentario"
            android:textColor="#555555"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/ratingBar"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etContenido"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:gravity="top|start"
            android:hint="Escribe aquí tu experiencia..."
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="#212121"
            android:textColorHint="#999999"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@id/tvLabelContenido"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <Button
            android:id="@+id/btnCancelarComentario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#9E9E9E"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/etContenido"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnEnviarComentario"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/btnEnviarComentario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enviar comentario"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/etContenido"
            app:layout_constraintStart_toEndOf="@id/btnCancelarComentario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
