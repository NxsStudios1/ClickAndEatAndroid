<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF3E0">

    <TextView
        android:id="@+id/tvTituloDialogIngrediente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrediente"
        android:textColor="#212121"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="#555555"
        android:textStyle="bold"
        android:layout_marginTop="4dp" />

    <EditText
        android:id="@+id/etNombreIngrediente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ej. Queso, tomate..."
        android:background="@drawable/edittext_background"
        android:textColor="#212121"
        android:textColorHint="#999999"
        android:padding="8dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:textColor="#555555"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etDescripcionIngrediente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción breve del ingrediente"
        android:background="@drawable/edittext_background"
        android:textColor="#212121"
        android:textColorHint="#999999"
        android:padding="8dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad por porción"
        android:textColor="#555555"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etCantidadPorcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ej. 50"
        android:inputType="numberDecimal"
        android:background="@drawable/edittext_background"
        android:textColor="#212121"
        android:textColorHint="#999999"
        android:padding="8dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvLabelUnidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unidad de medida"
        android:textColor="#555555"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/spUnidadMedida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock actual"
        android:textColor="#555555"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etStockActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad en inventario"
        android:inputType="numberDecimal"
        android:background="@drawable/edittext_background"
        android:textColor="#212121"
        android:textColorHint="#999999"
        android:padding="8dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio unitario"
        android:textColor="#555555"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etPrecioUnitario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ej. 12.50"
        android:inputType="numberDecimal"
        android:background="@drawable/edittext_background"
        android:textColor="#212121"
        android:textColorHint="#999999"
        android:padding="8dp"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnCancelarIngrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#9E9E9E" />

        <Button
            android:id="@+id/btnGuardarIngrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
