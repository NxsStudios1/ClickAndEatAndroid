<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFE0B2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTicketPedidoCliente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ticket: ---"
                android:textStyle="bold"
                android:textColor="#4E342E" />

            <TextView
                android:id="@+id/tvEstadoPedidoCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: Pendiente"
                android:textColor="#BF360C"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvFechaPedidoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Fecha: --/--/---- --:--"
            android:textColor="#5D4037"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvTotalPedidoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Total: $ 0.00"
            android:textColor="#4E342E"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvObsPedidoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Observaciones: -"
            android:textColor="#6D4C41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvItemsPedidoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Sin productos/promociones registrados."
            android:textColor="#4E342E"
            android:textSize="12sp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
