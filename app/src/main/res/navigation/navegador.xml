<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navegador"
    app:startDestination="@id/splashFragment">

    <!-- Splash inicial -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.login.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splashFragment_to_loginfragment"
            app:destination="@id/loginfragment" />
    </fragment>

    <!-- Login -->
    <fragment
        android:id="@+id/loginfragment"
        android:name="com.example.login.Loginfragment"
        android:label="fragment_loginfragment"
        tools:layout="@layout/fragment_loginfragment">

        <action
            android:id="@+id/action_loginfragment_to_registroFragment"
            app:destination="@id/registroFragment" />

        <!-- NUEVO: después de login correcto vamos a este fragmento de animación -->
        <action
            android:id="@+id/action_loginfragment_to_loginSuccessFragment"
            app:destination="@id/loginSuccessFragment" />
    </fragment>

    <!-- Registro -->
    <fragment
        android:id="@+id/registroFragment"
        android:name="com.example.login.RegistroFragment"
        android:label="fragment_registro"
        tools:layout="@layout/fragment_registro">

        <!-- NUEVO: después de crear cuenta, vamos a animación de registro exitoso -->
        <action
            android:id="@+id/action_registroFragment_to_registroExitosoFragment"
            app:destination="@id/registroExitosoFragment" />
    </fragment>

    <!-- Registro exitoso -->
    <fragment
        android:id="@+id/registroExitosoFragment"
        android:name="com.example.login.RegistroExitosoFragment"
        android:label="fragment_registro_exitoso"
        tools:layout="@layout/fragment_registro_exitoso">

        <!-- Después de la animación, volvemos al login -->
        <action
            android:id="@+id/action_registroExitosoFragment_to_loginfragment"
            app:destination="@id/loginfragment" />
    </fragment>

    <!-- Login exitoso -->
    <fragment
        android:id="@+id/loginSuccessFragment"
        android:name="com.example.login.LoginSuccessFragment"
        android:label="fragment_login_exitoso"
        tools:layout="@layout/fragment_login_exitoso">

        <!-- Argumento para saber a qué menú ir (1=admin, 2=cliente) -->
        <argument
            android:name="rol"
            app:argType="integer" />
    </fragment>

    <!-- Menú ADMIN -->
    <fragment
        android:id="@+id/administradorMenu"
        android:name="com.example.login.AdministradorMenu"
        android:label="fragment_administrador_menu"
        tools:layout="@layout/fragment_administrador_menu" />
    <fragment
        android:id="@+id/clienteMenu"
        android:name="com.example.login.ClienteMenu"
        android:label="ClienteMenu" />

    <!-- Menú CLIENTE -->

</navigation>
