<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFF4F7"
    app:strokeWidth="1dp"
    app:strokeColor="#FFB74D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgPromoCli"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/promocion" />

        <TextView
            android:id="@+id/tvNombrePromoCli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingTop="6dp" />

        <TextView
            android:id="@+id/tvDescripcionPromoCli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingTop="2dp" />

        <TextView
            android:id="@+id/tvFechasPromoCli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:paddingTop="2dp" />

        <TextView
            android:id="@+id/tvPrecioPromoCli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <Button
            android:id="@+id/btnAgregarPromoCli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar"
            android:layout_marginTop="4dp"
            app:backgroundTint="#FF9800"
            android:textColor="@android:color/white" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
