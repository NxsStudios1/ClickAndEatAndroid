<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="18dp"
    card_view:cardElevation="4dp">

    <!-- Contenedor grande del comentario + posible respuesta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_cliente">

        <!-- encabezado cliente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="4dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#4CAF50"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvNombreCliente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre cliente"
                android:textColor="@color/texto_principal"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvFechaComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25/11/2025 19:52"
                android:textColor="@color/texto_secundario"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- categoría + calificación -->
        <TextView
            android:id="@+id/tvCategoriaCalificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoría: GENERAL   Calificación: 1"
            android:textColor="@color/texto_secundario"
            android:textSize="12sp" />

        <!-- Asunto -->
        <TextView
            android:id="@+id/tvAsuntoComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Asunto: Mala experiencia en general"
            android:textColor="@color/texto_principal"
            android:textStyle="bold"
            android:textSize="13sp" />

        <!-- Texto del comentario -->
        <TextView
            android:id="@+id/tvTextoComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Texto del comentario..."
            android:textColor="@color/texto_suave"
            android:textSize="13sp" />

        <!-- Tarjeta de la respuesta del admin -->
        <LinearLayout
            android:id="@+id/layoutRespuestaAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:background="@drawable/bg_card_andy"
            android:padding="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNombreAdmin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Administrador: Andrea López"
                    android:textColor="@color/texto_principal"
                    android:textStyle="bold"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvFechaRespuesta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25/11/2025 19:54"
                    android:textColor="@color/texto_secundario"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTextoRespuesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Texto respuesta admin..."
                android:textColor="@color/texto_suave"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
