<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="160dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="8dp"
    android:background="@drawable/bg_card_cliente">

    <TextView
        android:id="@+id/tvNombrePromoCli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescripcionPromoCli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvFechasPromoCli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:paddingTop="2dp" />

    <TextView
        android:id="@+id/tvPrecioPromoCli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingTop="4dp" />

    <Button
        android:id="@+id/btnAgregarPromoCli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:layout_marginTop="4dp" />

</LinearLayout>
