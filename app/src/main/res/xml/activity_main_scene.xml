<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="2000">

        <KeyFrameSet>
            <!-- Rotación de la animación Lottie -->
            <KeyAttribute
                app:motionTarget="@+id/platito"
                android:rotation="720"
                app:framePosition="100" />

            <!-- Animación del texto Login -->
            <KeyAttribute
                app:motionTarget="@+id/tvlogin"
                android:alpha="0"
                app:framePosition="0" />
            <KeyAttribute
                app:motionTarget="@+id/tvlogin"
                android:alpha="1"
                app:framePosition="50" />

            <!-- Animación del campo usuario -->
            <KeyAttribute
                app:motionTarget="@+id/etname"
                android:alpha="0"
                android:translationY="-50dp"
                app:framePosition="0" />
            <KeyAttribute
                app:motionTarget="@+id/etname"
                android:alpha="1"
                android:translationY="0dp"
                app:framePosition="60" />

            <!-- Animación del ícono usuario -->
            <KeyAttribute
                app:motionTarget="@+id/imageView4"
                android:alpha="0"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:framePosition="0" />
            <KeyAttribute
                app:motionTarget="@+id/imageView4"
                android:alpha="1"
                android:scaleX="1"
                android:scaleY="1"
                app:framePosition="60" />

            <!-- Animación del campo password -->
            <KeyAttribute
                app:motionTarget="@+id/etpass"
                android:alpha="0"
                android:translationY="-50dp"
                app:framePosition="0" />
            <KeyAttribute
                app:motionTarget="@+id/etpass"
                android:alpha="1"
                android:translationY="0dp"
                app:framePosition="75" />

            <!-- Animación del ícono candado -->
            <KeyAttribute
                app:motionTarget="@+id/imageView3"
                android:alpha="0"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:framePosition="0" />
            <KeyAttribute
                app:motionTarget="@+id/imageView3"
                android:alpha="1"
                android:scaleX="1"
                android:scaleY="1"
                app:framePosition="75" />

            <!-- Animación del botón -->
            <KeyAttribute
                app:motionTarget="@+id/button"
                android:alpha="0"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:framePosition="0" />
            <KeyAttribute
                app:motionTarget="@+id/button"
                android:alpha="1"
                android:scaleX="1"
                android:scaleY="1"
                app:framePosition="90" />

            <!-- Animación del texto "No tienes cuenta" -->
            <KeyAttribute
                app:motionTarget="@+id/tvNoAccount"
                android:alpha="0"
                android:translationY="20dp"
                app:framePosition="0" />
            <KeyAttribute
                app:motionTarget="@+id/tvNoAccount"
                android:alpha="1"
                android:translationY="0dp"
                app:framePosition="95" />

            <!-- Animación del botón Registrarse -->
            <KeyAttribute
                app:motionTarget="@+id/btnRegister"
                android:alpha="0"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:framePosition="0" />
            <KeyAttribute
                app:motionTarget="@+id/btnRegister"
                android:alpha="1"
                android:scaleX="1"
                android:scaleY="1"
                app:framePosition="100" />
        </KeyFrameSet>

        <OnClick app:targetId="@+id/platito" />
    </Transition>

    <!-- Estado inicial: solo la animación Lottie visible en el centro -->
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/platito"
            android:layout_width="262dp"
            android:layout_height="149dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/tvlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:visibility="invisible" />

        <Constraint
            android:id="@+id/etname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:visibility="invisible" />

        <Constraint
            android:id="@+id/etpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:visibility="invisible" />

        <Constraint
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:visibility="invisible" />

        <Constraint
            android:id="@+id/imageView3"
            android:layout_width="38dp"
            android:layout_height="48dp"
            android:alpha="0"
            android:visibility="invisible" />

        <Constraint
            android:id="@+id/imageView4"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:alpha="0"
            android:visibility="invisible" />

        <Constraint
            android:id="@+id/tvNoAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:visibility="invisible" />

        <Constraint
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:visibility="invisible" />

        <Constraint
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />
    </ConstraintSet>

    <!-- Estado final: todos los elementos visibles en su posición -->
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/tvlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha="1"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/platito"
            android:layout_width="262dp"
            android:layout_height="149dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvlogin" />

        <Constraint
            android:id="@+id/etname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:alpha="1"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/platito" />

        <Constraint
            android:id="@+id/imageView4"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:layout_marginEnd="8dp"
            android:alpha="1"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/etname"
            app:layout_constraintTop_toTopOf="@+id/etname"
            app:layout_constraintBottom_toBottomOf="@+id/etname" />

        <Constraint
            android:id="@+id/etpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha="1"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etname" />

        <Constraint
            android:id="@+id/imageView3"
            android:layout_width="38dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:alpha="1"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/etpass"
            app:layout_constraintTop_toTopOf="@+id/etpass"
            app:layout_constraintBottom_toBottomOf="@+id/etpass" />

        <Constraint
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etpass" />

        <Constraint
            android:id="@+id/tvNoAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:alpha="1"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <Constraint
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alpha="1"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNoAccount" />

        <Constraint
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />
    </ConstraintSet>

</MotionScene>