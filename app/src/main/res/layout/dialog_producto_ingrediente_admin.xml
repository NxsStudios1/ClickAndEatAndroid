<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF3E0">

    <TextView
        android:id="@+id/tvTituloProductoIng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredientes del producto"
        android:textColor="#212121"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvNombreProductoIng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Producto: "
        android:textColor="#555555"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Ingrediente -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrediente"
        android:textColor="#555555"
        android:textStyle="bold"
        android:layout_marginTop="4dp" />

    <Spinner
        android:id="@+id/spIngredienteProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <!-- Cantidad -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad del ingrediente para este producto"
        android:textColor="#555555"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etCantidadIngredienteProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ej. 2, 50, 100..."
        android:inputType="numberDecimal"
        android:background="@drawable/edittext_background"
        android:textColor="#212121"
        android:textColorHint="#999999"
        android:padding="8dp"
        android:layout_marginTop="4dp" />

    <!-- Texto de ayuda -->
    <TextView
        android:id="@+id/tvAyudaProductoIng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pulsa “Agregar ingrediente” tantas veces como necesites.\nCuando termines, pulsa “Terminar”."
        android:textColor="#757575"
        android:textSize="12sp"
        android:layout_marginTop="8dp" />

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnCerrarProductoIngrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terminar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#9E9E9E" />

        <Button
            android:id="@+id/btnAgregarProductoIngrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar ingrediente"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
