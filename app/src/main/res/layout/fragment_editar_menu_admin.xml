<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootBienvenidaAdmin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFF3E0"
    tools:context=".administrador.menua.EditarMenuAdmin">

    <TextView
        android:id="@+id/tvTituloPanelAdmin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Panel principal - Administrador"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#5D4037"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBienvenidaAdmin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#FFE0B2"
        app:layout_constraintTop_toBottomOf="@id/tvTituloPanelAdmin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvBienvenidaTituloAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¡Bienvenido(a)!"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#4E342E"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/tvNombreAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del admin"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#BF360C"
                android:paddingBottom="12dp"/>

            <ImageView
                android:id="@+id/imgLogoAdmin"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginBottom="12dp"
                android:scaleType="fitCenter"
                android:contentDescription="@string/app_name"
                android:src="@drawable/logo_andy_burger"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvFraseDiaAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoy es un gran dÃ­a para vender âœ¨ðŸ”"
                android:textSize="16sp"
                android:textColor="#4E342E"
                android:paddingTop="8dp"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#FFCC80"/>

            <TextView
                android:id="@+id/tvHintAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revisa tus pedidos, inventario y promociones desde las pestaÃ±as de abajo."
                android:textSize="13sp"
                android:textColor="#6D4C41"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
